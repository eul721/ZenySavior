<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:stretchColumns="*" android:id="@+id/dbTable">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView

                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ID"
                    android:id="@+id/textView" android:layout_weight="1" android:textSize="14dp"
                    android:textStyle="bold"/>
            <TextView

                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Year"
                    android:id="@+id/textView2" android:singleLine="false" android:layout_weight="1"
                    android:textSize="14dp" android:textStyle="bold"/>
            <TextView

                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Month"
                    android:id="@+id/textView3" android:layout_weight="1" android:textSize="14dp"
                    android:textStyle="bold"/>
            <TextView

                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Date"
                    android:id="@+id/textView4" android:layout_weight="1" android:textSize="14dp"
                    android:textStyle="bold"/>
            <TextView

                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Spendings"
                    android:id="@+id/textView5" android:layout_weight="1" android:textSize="14dp"
                    android:textStyle="bold"/>
        </TableRow>
    </TableLayout>
</LinearLayout>